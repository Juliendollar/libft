#include <string.h>
#include <stdio.h>
#include "libft.h"

size_t ft_strlcat(char *dst, const char *src, size_t size)
{
    size_t i;
    size_t j;

    j = 0;
    i = 0;
    if (!src)
        return (ft_strlen(dst));
    else if (!dst)
        return (ft_strlen(src));
    else
    {
        while (i < size && dst[i])
        {
            i++;
        }
        while (src[j] && i < size -1)
        {
                dst[i] = src[j];
                i++;
                j++;
        }
        if (i < size)
            dst[i] = 0;
        return (ft_strlen(dst) + ft_strlen(src));
    }
}

