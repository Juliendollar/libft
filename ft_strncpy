#include "libft.h"
#include <string.h>

int ft_strlen(char *str)
{
    int i = 0;
    while (str[i])
        i++;
    return (i);
}
char *ft_strncpy (char *dest, const char * src, size_t len)
{
    size_t i;

    i = 0;
    while (src[i] && i < len)
        {
            dest[i] = src[i];
            i++;
        }
    while (i < len)
    {
        dest[i] = 0;
        i++;
    }
    return (dest);
}
